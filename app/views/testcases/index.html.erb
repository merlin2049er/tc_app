<p id="notice"><%= notice %></p>

<h1>Testcases</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Version</th>
      <th>Title</th>
      <th>Description</th>
      <th>Authored</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testcases.each do |testcase| %>
      <tr>
        <td><%= testcase.created_at.strftime("%F") %></td>
        <td><%= testcase.version %></td>
        <td><%= testcase.title %></td>
        <td><%= testcase.description %></td>
        <td><%=  mail_to  testcase.authored, testcase.email %></td>


        <td><%= link_to 'Show', testcase %></td>
        <td><%= link_to 'Edit', edit_testcase_path(testcase) %></td>
        <td><%= link_to 'Destroy', testcase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testcase', new_testcase_path %>
